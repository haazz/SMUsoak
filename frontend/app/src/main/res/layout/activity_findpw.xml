<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ActivityFindpw">

    <TextView
        android:id="@+id/find_text1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:text="학번"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/find_edit_id"
        app:layout_constraintStart_toStartOf="@+id/find_edit_id" />

    <EditText
        android:id="@+id/find_edit_id"
        android:layout_width="190dp"
        android:layout_height="36dp"
        android:layout_marginTop="120dp"
        android:background="@drawable/radius_8_stroke_darkgray"
        android:ems="10"
        android:hint="학번을 입력해 주세요."
        android:inputType="number"
        android:maxLength="9"
        android:paddingStart="12dp"
        android:textColorHint="@color/gray"
        android:textSize="12sp"
        app:layout_constraintStart_toStartOf="@+id/find_edit_pw"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_chainStyle="packed" />

    <TextView
        android:id="@+id/find_text2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="\@sangmyung.kr"
        app:layout_constraintBottom_toBottomOf="@+id/find_edit_id"
        app:layout_constraintEnd_toEndOf="@+id/find_edit_pw"
        app:layout_constraintTop_toTopOf="@+id/find_edit_id" />

    <Button
        android:id="@+id/find_btn_sendNum"
        android:layout_width="90dp"
        android:layout_height="25dp"
        android:layout_marginTop="5dp"
        android:alpha="0.5"
        android:background="@drawable/radius_8_solid_smu"
        android:enabled="false"
        android:text="인증번호 전송"
        android:textColor="@color/white"
        android:textSize="12sp"
        app:layout_constraintStart_toStartOf="@+id/find_edit_id"
        app:layout_constraintTop_toBottomOf="@+id/find_edit_id" />

    <EditText
        android:id="@+id/find_edit_num"
        android:layout_width="150dp"
        android:layout_height="25dp"
        android:layout_marginStart="5dp"
        android:background="@drawable/radius_8_stroke_darkgray"
        android:ems="10"
        android:hint="인증번호 입력"
        android:inputType="number"
        android:paddingStart="12dp"
        android:textColorHint="@color/gray"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="@+id/find_btn_sendNum"
        app:layout_constraintStart_toEndOf="@+id/find_btn_sendNum"
        app:layout_constraintTop_toTopOf="@+id/find_btn_sendNum" />

    <Button
        android:id="@+id/find_btn_checknum"
        android:layout_width="50dp"
        android:layout_height="25dp"
        android:alpha="0.5"
        android:background="@drawable/radius_8_solid_smu"
        android:enabled="false"
        android:text="확인"
        android:textColor="@color/white"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="@+id/find_edit_num"
        app:layout_constraintEnd_toEndOf="@+id/find_edit_pw"
        app:layout_constraintTop_toTopOf="@+id/find_edit_num" />

    <TextView
        android:id="@+id/signup_text_fail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:text="인증에 실패하였습니다."
        android:textColor="@android:color/holo_red_light"
        android:textSize="12sp"
        android:visibility="invisible"
        app:layout_constraintStart_toStartOf="@+id/find_btn_sendNum"
        app:layout_constraintTop_toBottomOf="@+id/find_btn_sendNum" />

    <EditText
        android:id="@+id/find_edit_pw"
        android:layout_width="300dp"
        android:layout_height="36dp"
        android:layout_marginTop="120dp"
        android:background="@drawable/radius_8_stroke_darkgray"
        android:ems="10"
        android:hint="8~20자리 비밀번호를 입력해 주세요."
        android:inputType="textPassword"
        android:paddingStart="12dp"
        android:textColorHint="@color/gray"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/find_edit_id" />

    <TextView
        android:id="@+id/find_text3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:text="비밀번호"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/find_edit_pw"
        app:layout_constraintStart_toStartOf="@+id/find_edit_pw" />

    <TextView
        android:id="@+id/find_text_pw"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="3dp"
        android:layout_marginTop="3dp"
        android:text="TextView"
        android:visibility="invisible"
        app:layout_constraintStart_toStartOf="@+id/find_edit_pw"
        app:layout_constraintTop_toBottomOf="@+id/find_edit_pw" />

    <EditText
        android:id="@+id/signup_edit_pw_check"
        android:layout_width="300dp"
        android:layout_height="36dp"
        android:layout_marginTop="60dp"
        android:background="@drawable/radius_8_stroke_darkgray"
        android:ems="10"
        android:hint="다시 한번 비밀번호를 입력해 주세요."
        android:inputType="textPassword"
        android:paddingStart="12dp"
        android:textColorHint="@color/gray"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="@+id/find_edit_pw"
        app:layout_constraintTop_toBottomOf="@+id/find_edit_pw" />

    <TextView
        android:id="@+id/find_text4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:text="비밀번호 재입력"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/signup_edit_pw_check"
        app:layout_constraintStart_toStartOf="@+id/signup_edit_pw_check" />

    <TextView
        android:id="@+id/find_text_pwcheck"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="3dp"
        android:layout_marginTop="3dp"
        android:text="TextView"
        android:visibility="invisible"
        app:layout_constraintStart_toStartOf="@+id/signup_edit_pw_check"
        app:layout_constraintTop_toBottomOf="@+id/signup_edit_pw_check" />

    <Button
        android:id="@+id/button"
        android:layout_width="0dp"
        android:layout_height="36dp"
        android:layout_marginTop="90dp"
        android:background="@drawable/radius_8_solid_smu"
        android:text="비밀번호 변경"
        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="@+id/signup_edit_pw_check"
        app:layout_constraintStart_toStartOf="@+id/signup_edit_pw_check"
        app:layout_constraintTop_toBottomOf="@+id/signup_edit_pw_check" />

    <TextView
        android:id="@+id/find_text_numcheck"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="3dp"
        android:layout_marginTop="3dp"
        android:text="인증에 성공하였습니다. 인증 인정 시간은 30분 입니다."
        android:textSize="12sp"
        android:visibility="invisible"
        app:layout_constraintStart_toStartOf="@+id/find_edit_id"
        app:layout_constraintTop_toBottomOf="@+id/find_edit_id" />

</androidx.constraintlayout.widget.ConstraintLayout>