<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/dProfile_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/dProfile_const"
        android:layout_width="200dp"
        android:layout_height="400dp"
        android:background="@drawable/radius_15_solid_sky"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/dProfile_profile"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginTop="50dp"
            android:src="@drawable/svg_profile"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageButton
            android:id="@+id/dProfile_btn_x"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:layout_marginTop="5dp"
            android:background="@android:color/transparent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/svg_x" />

        <TextView
            android:id="@+id/dProfile_text1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:text="나이"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/dProfile_text_name" />

        <TextView
            android:id="@+id/dProfile_text2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="성별"
            app:layout_constraintStart_toStartOf="@+id/dProfile_text1"
            app:layout_constraintTop_toBottomOf="@+id/dProfile_text1" />

        <TextView
            android:id="@+id/dProfile_text3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="학번"
            app:layout_constraintStart_toStartOf="@+id/dProfile_text2"
            app:layout_constraintTop_toBottomOf="@+id/dProfile_text2" />

        <TextView
            android:id="@+id/dProfile_text4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="MBTI"
            app:layout_constraintStart_toStartOf="@+id/dProfile_text3"
            app:layout_constraintTop_toBottomOf="@+id/dProfile_text3" />

        <TextView
            android:id="@+id/dProfile_text_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="이름"
            app:layout_constraintEnd_toEndOf="@+id/dProfile_profile"
            app:layout_constraintStart_toStartOf="@+id/dProfile_profile"
            app:layout_constraintTop_toBottomOf="@+id/dProfile_profile" />

        <ImageButton
            android:id="@+id/dProfile_btn_report"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="5dp"
            android:background="@android:color/transparent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/svg_report" />

        <Button
            android:id="@+id/dProfile_btn_chat"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_marginBottom="20dp"
            android:background="@drawable/radius_8_solid_light_blue"
            android:text="1 : 1 채팅하기"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/dProfile_text_mbti"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/dProfile_text4" />

        <TextView
            android:id="@+id/dProfile_text_age"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="20dp"
            android:text="나이"
            app:layout_constraintBottom_toBottomOf="@+id/dProfile_text1"
            app:layout_constraintEnd_toEndOf="parent" />

        <TextView
            android:id="@+id/dProfile_text_gender"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="성별"
            app:layout_constraintBottom_toBottomOf="@+id/dProfile_text2"
            app:layout_constraintEnd_toEndOf="@+id/dProfile_text_age" />

        <TextView
            android:id="@+id/dProfile_text_grade"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="학번"
            app:layout_constraintBottom_toBottomOf="@+id/dProfile_text3"
            app:layout_constraintEnd_toEndOf="@+id/dProfile_text_gender" />

        <TextView
            android:id="@+id/dProfile_text_mbti"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="MBTI"
            app:layout_constraintBottom_toBottomOf="@+id/dProfile_text4"
            app:layout_constraintEnd_toEndOf="@+id/dProfile_text_grade" />

        <ImageButton
            android:id="@+id/dProfile_btn_block"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="5dp"
            android:background="@android:color/transparent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/dProfile_btn_report"
            app:srcCompat="@drawable/svg_block" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>