<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/fprofile_image_profile"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="50dp"
        android:src="@drawable/svg_profile"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="닉네임"
        app:layout_constraintEnd_toEndOf="@+id/fprofile_image_profile"
        app:layout_constraintStart_toStartOf="@+id/fprofile_image_profile"
        app:layout_constraintTop_toBottomOf="@+id/fprofile_image_profile" />

    <TextView
        android:id="@+id/fprofile_text1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:layout_marginTop="50dp"
        android:text="생년월일"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <TextView
        android:id="@+id/fprofile_text2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:text="성별"
        app:layout_constraintStart_toStartOf="@+id/fprofile_text1"
        app:layout_constraintTop_toBottomOf="@+id/fprofile_text1" />

    <TextView
        android:id="@+id/fprofile_text3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:text="학번"
        app:layout_constraintStart_toStartOf="@+id/fprofile_text2"
        app:layout_constraintTop_toBottomOf="@+id/fprofile_text2" />

    <TextView
        android:id="@+id/fprofile_text4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:text="MBTI"
        app:layout_constraintStart_toStartOf="@+id/fprofile_text3"
        app:layout_constraintTop_toBottomOf="@+id/fprofile_text3" />

    <TextView
        android:id="@+id/fprofile_text_birth"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="40dp"
        android:text="2000.01.01"
        app:layout_constraintBottom_toBottomOf="@+id/fprofile_text1"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/fprofile_text_gender"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="남"
        app:layout_constraintBottom_toBottomOf="@+id/fprofile_text2"
        app:layout_constraintEnd_toEndOf="@+id/fprofile_text_birth" />

    <TextView
        android:id="@+id/fprofile_text_num"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="20학번"
        app:layout_constraintBottom_toBottomOf="@+id/fprofile_text3"
        app:layout_constraintEnd_toEndOf="@+id/fprofile_text_gender" />

    <TextView
        android:id="@+id/fprofile_text_mbti"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ENFJ"
        app:layout_constraintBottom_toBottomOf="@+id/fprofile_text4"
        app:layout_constraintEnd_toEndOf="@+id/fprofile_text_num" />

    <Button
        android:id="@+id/fprofile_btn_change"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:background="@drawable/radius_8_stroke_black_solid_white"
        android:text="수정"
        app:layout_constraintEnd_toStartOf="@+id/fprofile_btn_logout"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/fprofile_text4" />

    <Button
        android:id="@+id/fprofile_btn_logout"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:background="@drawable/radius_8_solid_smu"
        android:text="로그아웃"
        android:textColor="#ffffff"
        app:layout_constraintBottom_toBottomOf="@+id/fprofile_btn_change"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/fprofile_btn_change" />

</androidx.constraintlayout.widget.ConstraintLayout>