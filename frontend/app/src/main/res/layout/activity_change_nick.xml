<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ActivityChangeNick">

    <ImageButton
        android:id="@+id/change_nick_btn_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:background="@android:color/transparent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/svg_back" />

    <TextView
        android:id="@+id/change_nick_text1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:text="닉네임 변경"
        android:textColor="@color/SMU"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/change_nick_btn_back"
        app:layout_constraintStart_toEndOf="@+id/change_nick_btn_back"
        app:layout_constraintTop_toTopOf="@+id/change_nick_btn_back" />

    <EditText
        android:id="@+id/change_nick_edit"
        android:layout_width="210dp"
        android:layout_height="36dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/radius_8_stroke_darkgray"
        android:ems="10"
        android:hint="2~8자리 닉네임을 설정해주세요."
        android:inputType="text"
        android:paddingStart="12dp"
        android:textColorHint="@color/gray"
        android:textSize="12sp"
        app:layout_constraintStart_toStartOf="@+id/change_nick_btn_change"
        app:layout_constraintTop_toBottomOf="@+id/change_nick_text1" />

    <Button
        android:id="@+id/change_nick_btn_check"
        android:layout_width="80dp"
        android:layout_height="36dp"
        android:alpha="0.5"
        android:background="@drawable/radius_8_solid_smu"
        android:text="중복 확인"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="@+id/change_nick_edit"
        app:layout_constraintEnd_toEndOf="@+id/change_nick_btn_change"
        app:layout_constraintStart_toEndOf="@+id/change_nick_edit"
        app:layout_constraintTop_toTopOf="@+id/change_nick_edit" />

    <Button
        android:id="@+id/change_nick_btn_change"
        android:layout_width="300dp"
        android:layout_height="36dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/radius_8_solid_smu"
        android:text="변경하기"
        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/change_nick_edit" />

    <TextView
        android:id="@+id/change_nick_text_check"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:text="TextView"
        android:textSize="10sp"
        android:visibility="invisible"
        app:layout_constraintStart_toStartOf="@+id/change_nick_edit"
        app:layout_constraintTop_toBottomOf="@+id/change_nick_edit" />
</androidx.constraintlayout.widget.ConstraintLayout>