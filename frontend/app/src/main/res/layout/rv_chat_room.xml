<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/rv_chat_room_profile"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/custom_image_radius20"
        android:src="@drawable/svg_profile"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/rv_chat_room_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:text="TextView"
        android:textSize="13sp"
        app:layout_constraintStart_toEndOf="@+id/rv_chat_room_profile"
        app:layout_constraintTop_toTopOf="@+id/rv_chat_room_profile" />

    <TextView
        android:id="@+id/rv_chat_room_text"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:layout_marginEnd="10dp"
        android:maxLines="2"
        android:text="text"
        android:textColor="@color/dark_gray"
        android:textSize="12sp"
        app:layout_constraintEnd_toStartOf="@+id/rv_chat_room_time"
        app:layout_constraintStart_toStartOf="@+id/rv_chat_room_title"
        app:layout_constraintTop_toBottomOf="@+id/rv_chat_room_title" />

    <TextView
        android:id="@+id/rv_chat_room_time"
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="10dp"
        android:gravity="center"
        android:text="2023.09.13"
        android:textColor="@color/light_gray"
        android:textSize="10sp"
        app:layout_constraintBottom_toBottomOf="@+id/rv_chat_room_profile"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/rv_chat_room_profile" />

    <TextView
        android:id="@+id/rv_chat_room_num"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="3dp"
        android:text="2"
        android:textColor="@color/dark_gray"
        android:textSize="13sp"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="@+id/rv_chat_room_title"
        app:layout_constraintStart_toEndOf="@+id/rv_chat_room_title"
        app:layout_constraintTop_toTopOf="@+id/rv_chat_room_title" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/rv_chat_room_const_two"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/rv_chat_room_two2"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:background="@drawable/custom_image_radius10"
            android:src="@drawable/svg_profile"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/rv_chat_room_two1"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:background="@drawable/custom_image_radius10"
            android:src="@drawable/svg_profile"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/rv_chat_room_const_three"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/rv_chat_room_three1"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:background="@drawable/custom_image_radius10"
            android:src="@drawable/svg_profile"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/rv_chat_room_three2"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:background="@drawable/custom_image_radius10"
            android:src="@drawable/svg_profile"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <ImageView
            android:id="@+id/rv_chat_room_three3"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:background="@drawable/custom_image_radius10"
            android:src="@drawable/svg_profile"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/rv_chat_room_const_four"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/rv_chat_room_four1"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:background="@drawable/custom_image_radius10"
            android:src="@drawable/svg_profile"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/rv_chat_room_four2"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:background="@drawable/custom_image_radius10"
            android:src="@drawable/svg_profile"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/rv_chat_room_four3"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:background="@drawable/custom_image_radius10"
            android:src="@drawable/svg_profile"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/rv_chat_room_four_text"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:gravity="center_horizontal|center_vertical"
            android:text="+ 1"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>